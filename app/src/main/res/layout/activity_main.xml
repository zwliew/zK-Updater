<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_margin"
            android:text="@string/app_name_simple"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="8dp"
        android:paddingStart="8dp">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/updater_cur_card_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="64dp"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/updater_cur_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/updater_cur_card_view"
                android:layout_alignTop="@+id/updater_cur_card_view"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/text_view_margin"
                android:layout_marginTop="25dp"
                android:text="@string/updater_cur_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/updater_cur_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/updater_cur_title"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/text_view_margin"
                android:layout_marginTop="50dp"
                android:text="@string/unknown_val"
                android:textSize="14sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/updater_new_card_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/updater_new_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/updater_new_card_view"
                android:layout_alignTop="@+id/updater_new_card_view"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/text_view_margin"
                android:layout_marginTop="25dp"
                android:text="@string/updater_new_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/updater_new_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/updater_new_title"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/text_view_margin"
                android:layout_marginTop="50dp"
                android:text="@string/unknown_val"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/updater_new_log"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_history" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>